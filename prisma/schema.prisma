generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"        // <- literal, no env()
  url      = env("DATABASE_URL") // viene del plugin de Postgres en Railway
}

model Item {
  id        Int      @id @default(autoincrement())
  name      String
  price     Decimal  @db.Decimal(10,2)
  stock     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
